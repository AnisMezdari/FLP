{% extends "::baseFront.html.twig" %}

{% block body %}
  <div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">

      <div class="row">
        <div class="caption text-left">
          <h2> {{evenements[0].titre}} </h2>
        </div>
      </div>

      <div class="row">
          <div class="caption text-left">
            <p>{{evenements[0].texte}}</p>
          </div>
      </div>

      {% set i = 0 %}
      {% for evenement in evenements %}
        {% if i != 0 %}
          {% if evenement != NULL %}
            <div class = "row">
              <div class="thumbnail">
                <a href="" target="_blank">
                  <img src="{{evenement.urlImage}}" alt="" style="width:100%">
                </a>
              </div>
            </div>
          {% endif %}
        {% endif %}
        {% set i = i+1 %}
      {% endfor %}
    </div>

    <div class="col-md-3"></div>

  </div>
{% endblock %}